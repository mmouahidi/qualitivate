{
  "name": "qualitivate-io",
  "version": "1.0.0",
  "description": "Multi-tenant survey management platform",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build:db && npm run build --workspaces",
    "build:db": "tsc -p database/tsconfig.build.json",
    "build:server": "npm run build --workspace=server",
    "build:client": "npm run build --workspace=client",
    "build:all": "npm run build:db && npm run build:client && npm run build:server",
    "start": "cd server && npx knex migrate:latest --knexfile dist/config/knexfile.js && node dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "paramiko": "^0.0.1",
    "ssh2": "^1.17.0"
  }
}
